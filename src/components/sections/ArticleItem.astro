---
interface Props {
    title: string;
    date: Date;
    callToAction: string;
    documentUrl: string;
    assetUrl: string;
}
const { title, date, callToAction, documentUrl, assetUrl } = Astro.props;
---

<div class="bg-light-background flex md:flex-row flex-col border-outline-dark border mx-9">
        <div class="flex md:w-2/3 w-full flex-col lg:p-10 p-5">
            <h3 class="font-bold lg:text-xl">{title}</h3>
            <p class="italic mt-1">{date?.toLocaleDateString('de-CH')}</p>
            <a class="md:mt-auto mt-3 underline lg:text-lg" href={documentUrl}
                >{callToAction}</a
            >
        </div>
        <div class="flex md:w-1/3 w-full bg-primary-dark">
            <img class="w-full aspect-video" src={assetUrl} />
    </div>
</div>
